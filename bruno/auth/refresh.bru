meta {
  name: Refresh Token
  type: http
  seq: 3
}

post {{baseUrl}}/api/auth/refresh {
  headers {
    Content-Type: application/json
    X-API-Key: {{apiKey}}
  }
  body {
    {
      "refreshToken": "{{refreshToken}}"
    }
  }
}

tests {
  test("status should be 200", () => {
    expect(res.getStatus()).toBe(200);
  });
  test("should return new access token", () => {
    expect(res.getBody().data.accessToken).toBeDefined();
  });
}