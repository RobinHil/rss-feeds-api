meta {
  name: register
  type: http
  seq: 1
}

post {
  url: {{request}}://{{host}}:{{port}}/api/auth/register
  body: json
  auth: none
}

headers {
  X-API-Key: your-secret-system-api-key
}

body:json {
  {
    "username": "testuser",
    "email": "test@example.com",
    "password": "password123"
  }
}

script:post-response {
  bru.setEnvVar("auth-token", res.body.data.accessToken);
  bru.setEnvVar("refresh-token", res.body.data.refreshToken);
}
